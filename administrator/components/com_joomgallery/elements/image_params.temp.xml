<?xml version="1.0" encoding="utf-8"?>
<form>
	<name>Image Edit Form</name><params group="advanced" addpath="/administrator/components/com_joomgallery/elements">
		<param name="price" type="Text" label="Price" description="Please enter the cost of this image" />
		<param name="additional_description" type="textarea" rows="6" cols="25" default="" label="Additional Description" description="Additional  description to display" />
		<param name="additional_field" type="list" default="0" label="Example" description="Example dropdown field">
			<option value="0">Example option 0</option>
			<option value="1">Example option 1</option>
			<option value="2">Example option 2</option>
		</param>
		<param name="display_comments" type="radio" default="1" label="Display Comments" description="Please select whether the comments of this image shall be displayed">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</form>
